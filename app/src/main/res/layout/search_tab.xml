<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keyword"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:id="@+id/TextKeyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Keyword"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/keyworderror"
        android:textColor="@color/Red"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"/>
    <Spinner
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:id="@+id/SpinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/Condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition"/>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"/>

        <CheckBox
            android:layout_marginLeft="15dp"
            android:id="@+id/Used"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used" />
        <CheckBox
            android:layout_marginLeft="15dp"
            android:id="@+id/Unspecified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unspecified"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/ShoppingOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping Options"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/Local_Pickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local Pickup"/>
        <CheckBox
            android:layout_marginLeft="15dp"
            android:id="@+id/Free_Shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Shipping"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/EnableNearbySearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Nearby Search"/>
        <CheckBox
            android:layout_marginLeft="15dp"
            android:id="@+id/CheckboxEnableNearbySearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/NearbySearchField"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:id="@+id/TextMiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Miles from" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"/>
        <RadioButton
            android:layout_marginLeft="10dp"
            android:id="@+id/RadioButtonCurrentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Location"
            android:checked="true"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="150dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/RadioButtonHere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/TextZipcode"
                    android:hint="zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/selected_item"
                    android:layout_below="@id/TextZipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/zipcodeerror"
            android:textColor="@color/Red"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/White"
            android:background="@color/Orange"
            android:id="@+id/ButtonSearch"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="SEARCH"/>
        <Button
            android:id="@+id/ButtonClear"
            android:layout_marginLeft="10dp"
            android:textColor="@color/White"
            android:background="@color/Orange"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="CLEAR"/>
    </LinearLayout>
</LinearLayout>